#!/bin/bash

if [ ! -d "$HOME/dot13" ]; then
    echo "Installing dot13"
    git clone https://github.com/ernestas-poskus/dot13.git "$HOME/dot13"
fi

echo "Installing"

for f in $HOME/dot13/zsh/prezto/* ; do
  echo "ln -sf $f $HOME/.$(basename $f)"
  ln -sf $f "$HOME/.$(basename $f)"
done

ln -sf "$HOME/dot13/zsh/zshrc" "$HOME/.zshrc"

# Dot files
for f in $HOME/dot13/dotfiles/*; do
  if [ -f $f ]; then
    echo "ln -sf $f $HOME/.$(basename $f)"
    ln -sf $f "$HOME/.$(basename $f)"
  fi
done
